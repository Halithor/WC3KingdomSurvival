function constArmorBonus(int lvl) returns int
  if lvl == 0
    return 0
  return (lvl div 2) + 1

function constDmgReduced(int lvl) returns real
  var val = lvl * 0.02
  if lvl == 10
    val += 0.05
  return val

function constHpRegen(int lvl) returns real
  var val = lvl * 0.15
  if lvl > 8
    val += (lvl - 8) * 0.10
  return val

function dexIAS(int lvl) returns real
  var val = 0.0
  switch lvl
    case 1
      val = 0.03
    case 2
      val = 0.06
    case 3
      val = 0.1
    case 4
      val = 0.14
    case 5
      val = 0.18
    case 6
      val = 0.23
    case 7
      val = 0.28
    case 8
      val = 0.36
    case 9
      val = 0.42
    case 10
      val = 0.5
  return val
function dexMSBonus(int lvl) returns real
  var val = lvl * 0.015
  if lvl > 8
    val += 0.05
  return val

function intManaRegen(int lvl) returns real 
  return 0.2 * lvl

function intManaMax(int lvl) returns int 
  var val = lvl * 5
  if lvl > 4
    val += (lvl - 4) * 5
  if lvl > 8
    val += (lvl - 8) * 10
  return val

function intExpGain(int lvl) returns real
  var val = lvl * 0.1
  if lvl > 5
    val += (lvl - 5) * 0.1
  return val

